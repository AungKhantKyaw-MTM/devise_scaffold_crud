<% if user_signed_in? %>
<div id="friends">
  <table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr>
        <td>
        <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <% if friend.user == current_user %>
        <td><%= link_to "Delete", friend, method: :delete, class:'btn btn-sm btn-outline-danger' %></td>
        <% else %>
        <td></td>
        <% end %>
      <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New friend", new_friend_path, class:'btn btn-secondary' %>
<% else %>
<h1 class="my-3">Hello World!</h1>
<p>This is my first Rails Webpage...</p>
<% end %>